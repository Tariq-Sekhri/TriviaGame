<Window x:Class="TriviaGame.QuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaGame"
        mc:Ignorable="d"
        Title="QuestionWIndow" Height="450" Width="800">
    <Grid>

        <Image Name="imgTrivia" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="722,10,0,0" Width="50" Height="50" MouseLeftButtonDown="ImgTrivia_Click">
            <Image.Source>
                <BitmapImage UriSource="pack://application:,,,/user_icon.png" />
            </Image.Source>
        </Image>


        <TextBlock x:Name="txtUsername" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text=""  FontSize="32" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtScore" HorizontalAlignment="Left" Margin="14,53,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.703,-0.339"/>
        <TextBlock x:Name="txtQuestion" HorizontalAlignment="Center" Margin="0,116,0,0" TextAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Top" Text=""  Width="446"></TextBlock>
        <Button  x:Name="btnLeft" Content="" HorizontalAlignment="Left" Margin="108,241,0,0" VerticalAlignment="Top" Height="81" Width="190" Click="btnLeft_Click"/>
        <Button x:Name="btnRight" Content="" HorizontalAlignment="Left" Margin="509,241,0,0" VerticalAlignment="Top" Height="81" Width="190" Click="btnRight_Click"/>
        <TextBlock x:Name="txtScoreChange" HorizontalAlignment="Left" FontSize="128" Margin="328,196,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Button x:Name="btnNext" Visibility="Hidden" Content="Next" HorizontalAlignment="Center" Margin="0,376,0,0" VerticalAlignment="Top" Width="48" Click="btnNext_Click"/>
        <TextBlock x:Name="txtAwnser" HorizontalAlignment="Center" Margin="0,67,0,0" TextAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Top"  Width="446"/>
        <TextBlock x:Name="txtTimeLeft" HorizontalAlignment="Center" Margin="0,45,0,0" TextAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Top"  Width="446"/>

    </Grid>
</Window>
